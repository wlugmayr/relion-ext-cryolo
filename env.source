# This is an example bash environment which can be added to 
# your $HOME/.bashrc file or similar
#

# use crYOLO without conda activation
export CRYOLOPATH=/beegfs/cssb/software/anaconda3/envs/cryolo-1.8

# download the models from the crYOLO site and set them here
export REC_CRYOLO_JSON=/beegfs/cssb/software/etc/em/cryolo/models/gmodel_phosnet_202002_N63.json
export REC_CRYOLO_H5=/beegfs/cssb/software/etc/em/cryolo/models/gmodel_phosnet_202002_N63.h5

#
# choose either local or cluster below and comment the one not being used
#

# adapt the path to the local file location (local workstation)
export REC_CRYOLO_SCRIPT=/cssbsw/emtools/run_local_cryolo_gmodel.sh

# adapt the path to the file location on the submission node (cluster)
